= form_with model: [:admin, question],
            url: update_inline_admin_question_path(question),
            local: true,
            class: 'form-inline hide',
            data: { item_id: question.id } do |form|
  .input-group
    = form.text_field :body, class: 'form-control'
    .input-group-prepend.mx-2
      = form.submit t('.submit'), class: 'btn btn-primary'
